# INSTRUCTION: To use this configuration, rename this file from 'env.example' to '.env.local'
# ===========================
# General Configuration
# ===========================

# Generate a secure random string for authentication
AUTH_SECRET="your-secure-auth-secret-here"
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="your-admin-password"

# ===========================
# Database (Postgres)
# ===========================
# Example: postgres://USER:PASSWORD@HOST:PORT/DB_NAME
# For AWS RDS, Neon, or Supabase, paste the full connection string provided by the service
DATABASE_URL="postgres://username:password@your-db-host:5432/your-database-name"

# ===========================
# API Keys
# ===========================

# Firecrawl API Key - Get from https://firecrawl.dev
FIRECRAWL_API_KEY="your-firecrawl-api-key"

# EXA API Key - Get from https://exa.ai
EXA_API_KEY="your-exa-api-key"

# GNews API Key - Get from https://gnews.io (free tier available)
# Used for crowdsource news page
GNEWS_API_KEY="your-gnews-api-key"

# ===========================
# App URLs & IDs
# ===========================

# Better Auth URL - Should match your app's URL
BETTER_AUTH_URL="http://localhost:3000"

# AWS Bedrock Model Configuration
BEDROCK_MODEL_ID="us.amazon.nova-lite-v1:0"
# BEDROCK_MODEL_ID="amazon.nova-pro-v1:0"
BEDROCK_INFERENCE_PROFILE_ARN="arn:aws:bedrock:us-east-1:YOUR_ACCOUNT_ID:inference-profile/us.amazon.nova-pro-v1:0"

# ===========================
# AWS S3
# ===========================

S3_BUCKET="your-s3-bucket-name"

# ===========================
# AWS Credentials
# ===========================

APP_REGION="us-east-1"
APP_ACCESS_KEY_ID="your-aws-access-key-id"
APP_SECRET_ACCESS_KEY="your-aws-secret-access-key"

# ===========================
# AWS Cognito
# ===========================

COGNITO_REGION="us-east-1"
COGNITO_USER_POOL_ID="your-user-pool-id"
COGNITO_CLIENT_ID="your-cognito-client-id"
COGNITO_CLIENT_SECRET="your-cognito-client-secret"
COGNITO_DOMAIN="your-cognito-domain"  # e.g., checkmate-auth

# ===========================
# Google OAuth (for Cognito)
# ===========================

GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# ===========================
# Redis (Amazon ElastiCache)
# ===========================
# Set these in Amplify environment variables after enabling VPC access.
# Use cluster config endpoint with REDIS_MODE=cluster, or primary endpoint with REDIS_MODE=single.

REDIS_MODE="single"
REDIS_HOST="your-redis-host"
REDIS_PORT="6379"
REDIS_USERNAME="default"
REDIS_PASSWORD="your-redis-password"
REDIS_TLS="true"
REDIS_KEY_PREFIX="cm:"